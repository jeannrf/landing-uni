---
interface Props {
  text: string;
  class?: string;
}
const { text, class: className } = Astro.props;
---

<span
  class:list={[
    "inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-500/10 text-green-400 border border-green-500/20",
    className,
  ]}
>
  {text}
</span>
