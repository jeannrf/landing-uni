---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/shared/Navbar.astro";
import Footer from "../../components/shared/Footer.astro";

export function getStaticPaths() {
  return [
    { params: { slug: "sistema-gestion" } },
    { params: { slug: "discord-bot" } },
    { params: { slug: "app-movil" } },
    { params: { slug: "plataforma-cursos" } },
    { params: { slug: "clasificador-ia" } },
  ];
}

const { slug } = Astro.params;

const projects = {
  "sistema-gestion": {
    title: "Sistema de Gestión de Eventos",
    status: "En Desarrollo",
    tech: ["Next.js", "Supabase", "Tailwind"],
    description:
      "Una plataforma completa para administrar los eventos, inscripciones y certificados de la comunidad Unicode.",
    github: "#",
  },
  "discord-bot": {
    title: "Unicode Discord Bot",
    status: "Activo",
    tech: ["Node.js", "Discord.js", "MongoDB"],
    description:
      "Bot personalizado para automatizar la bienvenida de miembros, roles, notificaciones y música en nuestro servidor.",
    github: "#",
  },
  "app-movil": {
    title: "App Móvil Unicode",
    status: "Idea",
    tech: ["Flutter", "Firebase"],
    description:
      "Aplicación móvil para que los estudiantes puedan acceder a noticias, eventos y recursos de la comunidad de forma rápida.",
    github: "#",
  },
  "plataforma-cursos": {
    title: "Plataforma de Cursos",
    status: "En Desarrollo",
    tech: ["React", "Django", "PostgreSQL"],
    description:
      "Un espacio de aprendizaje con cursos gratuitos sobre desarrollo de software y tecnología creados por miembros de Unicode.",
    github: "#",
  },
  "clasificador-ia": {
    title: "Clasificador de Imágenes IA",
    status: "Completado",
    tech: ["Python", "TensorFlow", "FastAPI"],
    description:
      "Un modelo de inteligencia artificial capaz de clasificar diferentes tipos de componentes de hardware con alta precisión.",
    github: "#",
  },
};

const project = projects[slug as keyof typeof projects];
---

<Layout title={`${project?.title || "Proyecto"} | Unicode`}>
  <Navbar />

  <main class="pt-32 pb-20 min-h-screen">
    <div class="container mx-auto px-6">
      {
        !project ? (
          <div class="text-center py-20">
            <h1 class="text-4xl font-bold mb-4">Proyecto no encontrado</h1>
            <a href="/" class="text-green-500 hover:underline">
              Volver al inicio
            </a>
          </div>
        ) : (
          <div class="max-w-4xl mx-auto">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
              <h1 class="text-4xl md:text-5xl font-bold">{project.title}</h1>
              <span class="inline-block px-4 py-2 bg-green-500/10 text-green-400 rounded-full border border-green-500/20 font-mono text-sm">
                {project.status}
              </span>
            </div>

            <div class="bg-white/5 border border-white/10 rounded-2xl p-8 backdrop-blur-sm mb-8">
              <p class="text-xl text-gray-300 mb-6 leading-relaxed">
                {project.description}
              </p>

              <div class="flex flex-wrap gap-2 mb-8">
                {project.tech.map((t: string) => (
                  <span class="bg-white/10 px-3 py-1 rounded-md text-sm text-gray-300">
                    {t}
                  </span>
                ))}
              </div>

              <a
                href={project.github}
                class="inline-flex items-center gap-2 bg-white text-black px-6 py-3 rounded-lg font-bold hover:bg-gray-200 transition-colors"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
                Ver en GitHub
              </a>
            </div>
          </div>
        )
      }
    </div>
  </main>

  <Footer />
</Layout>
