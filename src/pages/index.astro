---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/shared/Navbar.astro";
import Footer from "../components/shared/Footer.astro";
import Hero from "../components/sections/Hero.astro";
import Novedades from "../components/sections/Novedades.astro";
import Stats from "../components/sections/Stats.astro";
import About from "../components/sections/About.astro";
import Alliances from "../components/sections/Alliances.astro";
import Socials from "../components/sections/Socials.astro";
import Card from "../components/cards/Card.astro";
---

<Layout title="Unicode | Comunidad de Tecnología">
	<Navbar />

	<main>
		<Hero />
		<Novedades />
		<Stats />
		<About />
		<Alliances />

		<!-- Resumen de Secciones (Invitation to Explore) -->
		<section class="py-24 bg-zinc-900/50">
			<div class="container mx-auto px-6">
				<h2 class="text-3xl md:text-5xl font-bold mb-12 text-center">
					Explora <span class="text-green-500">Unicode</span>
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
					<Card
						title="Áreas"
						description="Desarrollo Web, Ciberseguridad, IA y más. Descubre nuestras ramas."
						href="/areas"
					/>
					<Card
						title="Eventos"
						description="Talleres, Hackathones y Conferencias. ¡Participa!"
						href="/eventos"
					/>
					<Card
						title="Proyectos"
						description="Innovación creada por nuestros miembros. Mira lo que hacemos."
						href="/proyectos"
					/>
					<Card
						title="Convocatoria"
						description="Únete a la comunidad de tecnología más grande."
						href="/convocatoria"
					/>
				</div>
			</div>
		</section>

		<Socials />
	</main>

	<Footer />
</Layout>
